<div class="container pt-5 px-0 w-50">
  <h1 class="center mb-5">Write a review for <%= @restaurant.name %></h1>
  <%= simple_form_for([@restaurant, @review]) do |f| %>
    <%= f.input :rating, collection: (0..5) %>
    <%= f.input :content %>
    <%= f.submit class: "btn btn-primary" %>
    <%= link_to "Back to index", restaurants_path, class: "btn  btn-secondary" %>
  <% end %>
</div>
